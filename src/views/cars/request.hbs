<div class="row justify-content-center">
    <div class="col col-8">
        <h2 class="text-center">Yêu cầu thêm Xe</h2>
        <form action="/cars/requestCarPost" method="POST">
            <div class="form-group">
                <label for="carName">Tên Xe:</label>
                <input type="text" class="form-control" name="carName" placeholder="CarName" id="carName" value="">
            </div>
            <div class="form-group">
                <label for="carManufacture">Hãng Sản Xuất:</label>
                <input type="text" class="form-control" name="carManufacture" placeholder="CarManufacture" id="carManufacture" value="">
            </div>
            <div class="form-group">
                <label for="carTopSpeed">Số lượng:</label>
                <input type="text" class="form-control" name="carTopSpeed" placeholder="CarTopSpeed" id="carTopSpeed" value="">
            </div>
            <div class="form-group">
                <p class="text-danger">{{message}}</p>
            </div>
            <button type="submit" class="btn btn-primary">Yêu cầu</button>
        </form>
    </div>
</div>